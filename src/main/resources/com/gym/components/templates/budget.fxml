<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="320.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.controller.templates.BudgetController">
    <children>
      <HBox prefHeight="30.0" prefWidth="450.0" style="-fx-background-color: FFDD55;">
         <children>
            <Button mnemonicParsing="false" onAction="#operation" prefHeight="30.0" prefWidth="150.0" styleClass="navBtn" text="ОПЕРАЦИИ">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#category" prefHeight="30.0" prefWidth="150.0" styleClass="navBtn" text="КАТЕГОРИИ">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#report" prefHeight="30.0" prefWidth="150.0" styleClass="navBtn" text="ОТЧЕТ">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="290.0" prefWidth="450.0" style="-fx-background-color: FFFAAA;">
         <content>
            <VBox fx:id="wrap_budget" prefHeight="288.0" prefWidth="448.0" style="-fx-background-color: FFFAAA;" />
         </content>
      </ScrollPane>
    </children>
</VBox>
